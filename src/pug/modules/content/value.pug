// VALUE
section.value.section#value

  // VALUE CONTAINER
  .value__container.container.grid

    // VALUES IMAGES
    .values__images
      .value__orbe

      .value__img
        img(src="@img/value.jpg", alt="value image")

    // VALUE CONTENT
    .value__content

      // VALUE DATA
      .value__data 
        span.section__subtitle Our Value
        h2.section__title
          |Value We Give To You
          span .

        p.value__description.
          We always ready to help by providing the best service for you. We believe a good place to live can make your life better.

      // VALUE ACCORDION
      .value__accordion

        each item in valueAccordion
          // ACCORDION ITEM
          .value__accordion-item

            // ACCORDION HEADER
            header.value__accordion-header 
              i(class=`value__accordion-icon ${item.icon}`)
              h3.value__accordion-title= item.title

              .value__accordion-arrow
                i.bx.bxs-down-arrow

            // ACCORDION CONTENT
            .value__accordion-content
              p.value__accordion-description= item.descr
